<% provide(:title, @user.name) %>
<div class="row">
<aside class="col-md-4">
<section class= "user_info">
  <table class ="table table-striped ">
  	<tr>
  		<td><%= gravatar_for @user %></td>
  		<td><h1><%= @user.name %></h1></td>
  	</tr>
  	<tr>
  		<td>Age:</td>
  		<td><%= @user.age %></td>
  	</tr>
  	<tr>
  		<td>Gender:</td>
  		<td><%= @user.gender %></td>
  	</tr>
  	<tr>
  		<td>Occupation:</td>
  		<td><%= @user.occupation %></td>
   	</tr>
  </table>
  </section>
  </aside>
</div>