<% provide(:title, @user.name) %>
<% if logged_in? %>
<div class="row">
<aside class="col-md-4">
<section class= "user_info">
  <table class ="table table-striped ">
  	<tr>
  		<td><%= gravatar_for @user %></td>
  		<td><h1><%= @user.name %></h1></td>
  	</tr>
  	<tr>
  		<td>Age:</td>
  		<td><%= @user.age %></td>
  	</tr>
  	<tr>
  		<td>Gender:</td>
  		<td><%= @user.gender %></td>
  	</tr>
  	<tr>
  		<td>Occupation:</td>
  		<td><%= @user.occupation %></td>
   	</tr>
  </table>
  </section>
  </aside>
  <div class="col-md-8">
    <% if @user.songs.any? %>
    <h3>Songs (<%= @user.songs.count %>)</h3>
    <ol class= "songs">
      <%= render @user_songs %>
    </ol>
    <%= will_paginate @user_songs %>
    <% end %>
  </div>
</div>
<% end %>