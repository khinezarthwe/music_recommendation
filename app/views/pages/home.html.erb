<% provide(:title,"Home") %>

<% if logged_in? %>

<div class="row">
  <section class= "col-md-9">
  <section class="col-md-6">
    <section class = "user_info">
      <%= render 'shared/user_info'%>
    </section>
  </section>
    
    
  </section>
  <section class="col-md-3">
    <button type="button" class="btn btn-success btn-lg" data-toggle="modal" data-target="#songFormModal">
      Add New Song
    </button>
    <section id="songFormModal" class="modal" tabindex="-1" role="dialog">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
            <h4 class="modal-title" id="gridSystemModalLabel">Add New Song</h4>
          </div>
          <div class="modal-body song_form">
            <div class="row">
              <div class="col-md-6 col-md-offset-3">
                <%= render 'shared/song_form' %> 
              </div>
            </div>   
          </div> 
        </div>
      </div>
    </section>
  </section>
</div>
<% if @song.present? then %>
<div class="row">
<%= render 'shared/error_messages',object: @song %>
</div>
<% end %>
<div class="row">
  <br>
</div>
<div class="row">
  <aside class="col-md-12">
  <%= render 'shared/search_form' %>
  </aside>
</div>
<div class="row">
  <aside class="col-md-12">
    <%= render 'shared/recommend_form' %>
  </aside>
</div>
<div class="row">
  <aside class="col-md-4">
    <ol id='recommend_result' class="songs">
    </ol>
  </aside>
  <aside class="col-md-4">
    <!-- <h4>Recommended by Song Genres</h4> -->
    <ol id='recommend_result2' class="songs">
    </ol>
  </aside>
  <aside class="col-md-4">
    <ol id='recommend_result3' class="songs">
    </ol>
  </aside>
</div>

<% else %>
<div class="center jumbotron">

<h1>Music Recommendation System</h1>
<p>
	This is the Home Page for My Music Recommendation System
</p>
<%= link_to "Sign up now!",signup_path, class: "btn btn-lg btn-info"%>
<div class="row">
  <div class="col-md-6">
  Search your favourite songs<br>
  You can search the song lyric in my system.<br>
  We can recommend for you!
  </div>
  <div class="col-md-6">
  You can see Popular song in our system.<br>
  We can recommend specific recommend for you.
  We hope you can satisfy our results.

  </div>
</div>
</div>
<% end %>


	
