<%= form_for(@song) do |f| %>
<%= render 'shared/error_messages',object:f.object %>
	<%= f.label :artist_name %>
    <%= f.text_field :artist_name, class: 'form-control' %>
    <%= f.label :song_name %>
    <%= f.text_field :song_name, class: 'form-control' %>
    <%= f.label :video_link %>
    <%= f.text_field :video_link, class: 'form-control' %>
    <% f.label :song_genre %>
    <%= f.select :song_genre,['Hard Rock/Metal','Pop','R&b/Soul','Alternative','EDM/Electronic','Rap/Hip Pop','Punk','Rock','Country','Classical']%>
 <div class = "field" >
	<%= f.text_area :lyric , placeholder:"song lyric  .... "%>
</div>
<%= f.submit "Post",class:"btn btn-primary" %>
<% end %>